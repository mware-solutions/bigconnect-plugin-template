<div class="basic-auth">
  <form action="" class="login">
    <p class="text-error">{{#if errorMessage}}{{errorMessage}}{{/if}}</p>

    <input class="username" type="text" placeholder="{{i18n 'org.bigconnect.example.auth.username'}}" autofocus />
    <input class="password" type="password" placeholder="{{i18n 'org.bigconnect.example.auth.password'}}" />

    <button class="btn btn-primary">{{i18n 'org.bigconnect.example.auth.login'}}</button>
  </form>
</div>
